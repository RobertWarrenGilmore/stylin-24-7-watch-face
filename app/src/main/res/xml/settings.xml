<?xml version ="1.0" encoding ="utf-8"?><!--  Learn More about how to use App Actions: https://developer.android.com/guide/actions/index.html -->
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        app:defaultValue="false"
        app:key="@string/settings_key_use_location"
        app:title="@string/use_location"
        app:summary="@string/use_location_description"/>

    <SwitchPreference
        app:defaultValue="false"
        app:key="@string/settings_key_show_single_minute_ticks"
        app:title="@string/show_single_minute_ticks" />

    <SwitchPreference
        app:defaultValue="false"
        app:key="@string/settings_key_show_second_hand"
        app:title="@string/show_second_hand" />

    <SwitchPreference
        app:defaultValue="false"
        app:dependency="@string/settings_key_show_second_hand"
        app:key="@string/settings_key_animate_second_hand_smoothly"
        app:title="@string/animate_second_hand_smoothly" />

    <SwitchPreference
        app:defaultValue="false"
        app:key="@string/settings_key_draw_realistic_sun"
        app:title="@string/draw_realistic_sun" />

    <Preference app:summary="RobertWarrenGilmore.com" />

</androidx.preference.PreferenceScreen>
